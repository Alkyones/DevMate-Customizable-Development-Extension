{
  "manifest_version": 3,
  "name": "DevMate",
  "short_name": "DevMate",
  "version": "1.4",
  "description": "View and copy local storage keys with additional features for development purposes.",
  "permissions": ["activeTab", "scripting", "webRequest", "storage"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "functions.js", 
        "db.js",
        "scripts/config/constants.js",
        "scripts/ui/dom-utils.js",
        "scripts/ui/snackbar.js",
        "scripts/ui/panel-manager.js",
        "scripts/features/credential-generator.js",
        "scripts/features/local-storage.js",
        "scripts/features/useful-links.js",
        "scripts/features/credentials.js",
        "scripts/features/fetch-capture.js",
        "scripts/features/code-keeper.js",
        "scripts/features/pinger.js"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
